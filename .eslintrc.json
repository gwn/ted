{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "max-len": [2, 80],
        "indent": [2, 4],
        "linebreak-style": [2, "unix"],
        "quotes": [2, "single"],
        "semi": [2, "never"],
        "no-console": 0,
        "comma-dangle": [2, "always-multiline"],
        "no-unused-vars": 1
    }
}
